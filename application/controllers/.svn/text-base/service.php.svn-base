	function complaint_add($number,$text)
	{
		$text = explode("_",$text);
	    $customer_id = $this->service_m->getCustomerIdByNumber($number);
		$machine_code = $text[0];
		$complaint_code = $text[1];
		$data['customer_complaint_id'] = $this->page_setting->get_uniq_id("tbl_customer_complaint");
		$data ['customer_complaint_date_insert'] =  date('Y-m-d H:i:s');
		$data ['customer_complaint_status'] =  '0';
		if($customer_id){
			$data ['customer_id'] =$customer_id;
		}else{
			return false;
		}
		if($machine_code){
			$data ['customer_machine_code'] =$machine_code;
		}else{
			return false;
		}
		if($complaint_code){
			$data ['complaint_code'] =$complaint_code;
		}else{
			return false;
		}
		//print_r($data);
		//exit();
    $this->service_m->customerComplaint($data);
	}
